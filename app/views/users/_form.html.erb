<%= form_with user do |user| %>
	<%= user.label :nickname %>
	<%= user.text_field :nickname %>

	<%= user.label :email %>
	<%= user.email_field :email %>

	<%= user.label :password %>
	<%= user.password_field :password %>

	<%= user.label :password_confirmation, 'Please Confirm Password' %>
	<%= user.password_field :password_confirmation %>
<% end %>