<%= form_with model: user do |user| %>
	<%= user.label :name %>
	<%= user.text_field :name %>

	<%= user.label :email %>
	<%= user.email_field :email %>

	<% unless user.object.uid %>
		<%= user.label :password %>
		<%= user.password_field :password %>

		<%= user.label :confirmed_password, 'Please confirm password' %>
		<%= user.password_field :confirmed_password %>
	<% end %>
<% end %>